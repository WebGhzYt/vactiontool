<% provide(:title, 'Applied for Leaves') %>
<div class="container containerwidth" style="background-color:#ffffff;border:1px solid #dedede;box-shadow:8px 8px 8px 8px #dedede;">
  
	<div class="">
		<h2 class="pageTitle ">Leaves Request Form</h2>
	</div>
   <%= simple_form_for @vacation, html: {class: 'form-horizontal' }, url: vacations_path do |f| %>
   <%= f.hidden_field :user_id, :value => current_user.id%>
   <%= f.hidden_field :status, :value => 'pending'%>
   <%= f.hidden_field :applied_date, :value => Time.now%>
   <%= f.hidden_field :status_date, :value => ''%>
    <%= render 'shared/error_messages', object: f.object %>
    
      <div class="form-group">
        <%= f.input :leave_type do %>
        <%= f.select :leave_type, options_for_select([['SL', 'SL'], ['CL', 'CL'], ['PL', 'PL'], ['Comp off', 'comp off']]), class:"col-sm-2 control-label",  :include_blank => "" %>
         <% end %>     
      </div>
      <div class="form-group">
        <%= f.input :reason, class:"col-sm-2 control-label" %>
      </div>
      <div class="form-group"> 
        <%= f.input :leaves_from, as: :date, class:"col-sm-2 control-label" %>
      </div>
      <div class="form-group">  
        <%= f.input :leaves_to, as: :date, class:"col-sm-2 control-label" %>
      </div>
      <div class="form-group">
        <%= f.button :submit, class:"btn btn-large btn-primary" %>
      </div>
    <% end %>
</div>     
      